<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners
                android:radius="250dp"/>

            <gradient
                android:angle="135"
                android:centerX="1.0"
                android:centerY="0.0"
                android:endColor="#A8EA46"
                android:startColor="#2BCD41"
                android:type="linear"
                android:useLevel="false" />

            <padding
                android:left="10dp"
                android:top="5dp"
                android:right="10dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>